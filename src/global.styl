.small-section
    padding: 1.5rem 1rem;

.centered
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;

/* Global stuff */

html, body
    height: auto !important;
    margin: 0;
    padding: 0;
    min-height: 100vh;
    /* min-width: 100vw !important */
    background-color: #586994;

/* Fix Cards size */
.card
    display: flex;
    flex-direction: column;
    height: 100% !important;
.card-footer
    margin-top: auto;

.is-primary-bg
    background-color: #586994 !important;
.is-primary
    color: #586994 !important;
.is-secondary-bg
    background-color: #E5E8B6 !important;
.is-secondary
    color: #E5E8B6 !important;